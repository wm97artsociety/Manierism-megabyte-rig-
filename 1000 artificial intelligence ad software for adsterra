    <footer class="mt-2 text-[8px] flex justify-between items-center text-zinc-600 font-mono">
        <div>CYCLE_ID: <span id="cyc-id" class="text-white">0</span></div>
        <div id="timer-display" class="text-yellow-500 font-bold bg-yellow-950/20 px-3 py-1 rounded border border-yellow-900/50">STATUS: IDLE</div>
        <div class="flex gap-3">
            <span>WATT: <span id="rev-watt" class="text-purple-400">0.00</span></span>
            <span class="text-[#00ffcc]">[ VISUAL_PRELOAD_ENABLED ]</span>
        </div>
    </footer>

    <script>
        // Menu Controllers
        function toggleDropdown(event) {
            event.stopPropagation();
            document.getElementById("header-dropdown-menu").classList.toggle("show");
        }
        window.onclick = function(event) {
            if (!event.target.matches('.menu-link')) {
                const dropdowns = document.getElementsByClassName("dropdown-menu");
                for (let d of dropdowns) { if (d.classList.contains('show')) d.classList.remove('show'); }
            }
        }

        // Logic Constants
        const AD_URL = "https://www.effectivegatecpm.com/kakdw2kr?key=f3cf780f577070b1030e1e3d2b0cbf7f (example url for ads) ";  ( my url for ads but please change with adsterra.com publisher to set up)
        const VAL_PER_AD = 0.0002;
        const VAL_WATT_D = 0.017;
        const VAL_WATT = 0.0000017;

        let state = { running: false, cycle: 0, ready: 0, usd: 0, timer: 30 };

        const elements = {
            grid: document.getElementById('grid'),
            boot: document.getElementById('boot'),
            overlay: document.getElementById('ai-overlay'),
            msg: document.getElementById('ai-msg'),
            bar: document.getElementById('ai-bar'),
            readyTxt: document.getElementById('ready-count'),
            timerTxt: document.getElementById('timer-display'),
            revUsd: document.getElementById('rev-usd'),
            revWattD: document.getElementById('rev-wattd'),
            revWatt: document.getElementById('rev-watt'),
            status: document.getElementById('ai-status'),
            cycTxt: document.getElementById('cyc-id'),
            loader: document.getElementById('loader-icon')
        };

        // Initialize 1000 Grid Nodes
        for(let i=0; i<1000; i++) {
            const b = document.createElement('div');
            b.className = 'micro-box';
            b.id = `box-${i}`;
            elements.grid.appendChild(b);
        }

        async function startPreload() {
            if(!state.running) return;
            state.ready = 0;
            elements.readyTxt.innerText = "0";
            elements.overlay.style.opacity = "1";
            elements.loader.classList.remove('hidden');
            elements.status.innerText = "VISUALIZING_STREAMS";
            elements.status.className = "text-yellow-500";
            elements.timerTxt.innerText = "STATUS: PRELOADING";

            const batchSize = 50; // Smaller batches for better visual sequence
            for (let i = 0; i < 1000; i += batchSize) {
                if(!state.running) break;
                elements.msg.innerText = `SYNCING_URL_DATA: ${i}-${i+batchSize}`;
                
                const batchPromises = [];
                for (let j = 0; j < batchSize; j++) {
                    const idx = i + j;
                    const box = document.getElementById(`box-${idx}`);
                    box.innerHTML = ''; 

                    const p = new Promise(resolve => {
                        const frame = document.createElement('iframe');
                        frame.src = `${AD_URL}&node=${idx}&c=${state.cycle}&t=${Date.now()}`;
                        const timeout = setTimeout(resolve, 8000); // 8s cap

                        frame.onload = () => {
                            clearTimeout(timeout);
                            state.ready++;
                            elements.readyTxt.innerText = state.ready;
                            box.classList.add('loaded');
                            elements.bar.style.width = `${(state.ready/1000)*100}%`;
                            resolve();
                        };
                        box.appendChild(frame);
                    });
                    batchPromises.push(p);
                }
                await Promise.all(batchPromises);
                // Force a tiny pause so user sees the batch appear
                await new Promise(r => setTimeout(r, 50));
            }

            elements.overlay.style.opacity = "0.2";
            elements.loader.classList.add('hidden');
            elements.status.innerText = "STREAMS_ACTIVE";
            elements.status.className = "text-green-500";
            beginCountdown();
        }

        function beginCountdown() {
            state.timer = 30;
            const ticker = setInterval(() => {
                if(!state.running) { clearInterval(ticker); return; }
                state.timer--;
                elements.timerTxt.innerText = `STATUS: BROADCASTING (${state.timer}s)`;
                
                if(state.timer <= 0) {
                    clearInterval(ticker);
                    updateBalances();
                    state.cycle++;
                    elements.cycTxt.innerText = state.cycle;
                    startPreload();
                }
            }, 1000);
        }

        function updateBalances() {
            state.usd += (1000 * VAL_PER_AD);
            elements.revUsd.innerText = `$${state.usd.toFixed(4)}`;
            elements.revWattD.innerText = (state.usd / VAL_WATT_D).toFixed(6);
            elements.revWatt.innerText = (state.usd / VAL_WATT).toLocaleString();
        }

        elements.boot.onclick = () => {
            if(state.running) { location.reload(); return; }
            state.running = true;
            elements.boot.innerText = "HALT_NODE";
            elements.boot.className = "bg-red-600 text-white px-4 py-1 text-[10px] font-bold uppercase";
            startPreload();
        };
    </script>
</body>
